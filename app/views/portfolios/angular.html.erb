<h1>Angular portfolio Items </h1>

<%= link_to "Crea un nuovo item", new_portfolio_path %>

<% @angular_portfolio_items.each do |portfolio_item| %>
  
  <p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p>
  <p><%= portfolio_item.subtitle %></p>
  <p><%= portfolio_item.body %></p>
  <%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %>
  <%= link_to "Modifica", edit_portfolio_path(portfolio_item) %>
  <%= link_to 'Cancella', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %>

    
<% end %>